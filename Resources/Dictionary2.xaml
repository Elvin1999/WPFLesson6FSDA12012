<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <LinearGradientBrush x:Key="SpecialColor" StartPoint="0,0" EndPoint="1,1">

        <GradientStop Color="Yellow" Offset="0.0" ></GradientStop>
        <GradientStop Color="Red" Offset="0.25" ></GradientStop>
        <GradientStop Color="Blue" Offset="0.75" ></GradientStop>
        <GradientStop Color="DeepPink" Offset="1.0" ></GradientStop>
        
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SpecialColor2" StartPoint="0,0" EndPoint="1,1">

        <GradientStop Color="Yellow" Offset="0.0" ></GradientStop>
        <GradientStop Color="Red" Offset="0.25" ></GradientStop>

    </LinearGradientBrush>
</ResourceDictionary>